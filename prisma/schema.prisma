// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Cidade {
  cidade_id   Int       @id @default(autoincrement())
  cidade_nome String
  Cliente     Cliente[]
}

model Cliente {
  cliente_id       Int            @id @default(autoincrement())
  cliente_nome     String
  cliente_cnpj_cpf String         @unique
  filial           Int            @default(1)
  cidade_id        Int
  codigo_sg        Int
  razao_social     String
  cidade           Cidade         @relation(fields: [cidade_id], references: [cidade_id])
  VersaoPDV        VersaoPDV[]
  BackupVersao     BackupVersao[]
  ClientEnv        ClienteEnv[]
}

model VersaoPDV {
  pdv_numero      Int
  revisao         String
  data_compilacao String
  versao          String
  sistema_op      String
  cliente_id      Int
  cliente         Cliente @relation(fields: [cliente_id], references: [cliente_id])

  @@id([pdv_numero, cliente_id]) // Define uma chave prim√°ria composta
}

model BackupVersao {
  bkp_id                   Int     @id
  bkp_srv_espaco_livre     Int?
  bkp_ultimo_sgerp_cliente String?
  bkp_ultimo_sgdfe         String?
  bkp_local_sgdfe          String?
  bkp_local_sgerp          String?
  bkp_ultimo_automatico    String?
  bkp_tamanho_sgdfe        String?
  bkp_tamanho_sgerp        String?
  script_md5               String?
  script_retorno_update    String?
  script_ultima_comunicao  String?
  sgerp_versao_sgerp       String?
  sgerp_revisao            String?
  sgerp_compilacao         String?
  vers_sgdfe               String?

  cliente_id Int
  cliente    Cliente @relation(fields: [cliente_id], references: [cliente_id])
}

model ClienteEnv {
  id                                Int      @id @default(autoincrement())
  cliente_id                        Int
  description                       String?
  caminho_parame                    String?
  caminho_backup_sgdfe              String?
  caminho_backup_automatico         String?
  page_notion                       String?
  origem_backup                     String?
  padrao                            String?
  repo_dir                          String?
  cloud_sgdfe                       String?
  cloud_sgerp                       String?
  remote_server                     String?
  bucket_name                       String?
  deleta_backup_local               String?
  caminho_backup_seguranca          String?
  nao_realiza_correcao_parame_sgdfe String?
  sgdfe_cloud                       String?
  createdAt                         DateTime @default(now())
  updatedAt                         DateTime @updatedAt

  cliente Cliente @relation(fields: [cliente_id], references: [cliente_id])
}
